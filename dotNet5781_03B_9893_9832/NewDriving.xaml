<Window x:Class="dotNet5781_03B_9893_9832.NewDriving"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5781_03B_9893_9832"
        mc:Ignorable="d"
        Title="נסיעה חדשה" Height="150" Width="200" FontFamily="FbExtazi Regular">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="הכנס את המרחק"
                   Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                   Height="25" Width="113"
                   Style="{StaticResource FontForTextBlock}"
                   TextAlignment="Center"/>
        <TextBox x:Name="sumKM"
                 KeyDown="TextBox_OnlyNumbers_PreviewKeyDown"
                 Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top"
                 Style="{StaticResource FontForTextBox}" Height="23" TextWrapping="Wrap" Width="120" TextAlignment="Center"/>

    </Grid>
</Window>
