<Window x:Class="PL.Management"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Management" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Welcome!" 
               Grid.Row="0" Height="41" Width="348"
               FontWeight="Bold" FontStyle="Italic" FontSize="20" Foreground="#FF1DBCD4"/>
        <GroupBox Header="Choose Option:"
                  Grid.Row="1"
                  FontSize="16" FontStyle="Italic" FontWeight="SemiBold" Margin="90,10">
            <StackPanel Margin="21,20,29,24">
                <RadioButton x:Name ="rbBuses" Content="buses" Height="24" IsChecked="True"/>
                <RadioButton x:Name ="rbStations" Content="stations" Height="23" Margin="0,0,-11,0"/>
                <RadioButton x:Name ="rbLines" Content="lines" Height="35"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="enter" Content="ENTER"
                Grid.Row="2" Height="42" Width="105"
                Background="#FF4496CF" FontSize="16" FontFamily="Kristen ITC" FontWeight="Bold" RenderTransformOrigin="0.501,0.505"
                Click="enter_Click"/>


    </Grid>
</Window>
