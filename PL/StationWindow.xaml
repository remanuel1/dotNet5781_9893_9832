<Window x:Class="PL.StationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationWindow" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="288"/>
                <RowDefinition Height="81.6"/>
            </Grid.RowDefinitions>

            <Label Content="all bus stations:" 
                   Grid.Row="0" Grid.Column="0" Padding="10" VerticalAlignment="Bottom"
                   Style="{StaticResource FontForLabel}" Height="37" Margin="0,0,0.2,0.4"/>

            <ListView x:Name="listStation"
                 ItemsSource="{Binding}" MouseDoubleClick="listStation_MouseDoubleClick" Grid.Column="0" Padding="10" Margin="0,50,0.2,2.4" Grid.RowSpan="2"/>

            <Button Content="add new bus station"
                    Grid.Row="2" Grid.Column="0" Height="40" Width="140"  VerticalAlignment="Center"
                Style="{StaticResource FontForButtom}"
                Click="Button_Click_Add"/>
        </Grid>

        <Grid x:Name="detailStation" Grid.Column="1" Width="450" Margin="9.8,50,9.6,12"
              Visibility="{Binding}" DataContext="{Binding}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="53"/>
                <RowDefinition Height="70.4"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Number Bus Station"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="0" Padding="5"
               Style="{StaticResource FontForLabel}" Height="27" Margin="12,4.8,12,3.4" Width="140"/>

            <TextBox x:Name="numberStation" Text="{Binding numberStation}" IsEnabled="False"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="0" Padding="5" Width="150"
               Style="{StaticResource FontForTextBox}"/>

            <Label Content="Name Station"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="1" Padding="5"
               Style="{StaticResource FontForLabel}" Width="100"/>

            <TextBox x:Name="nameStation" Text="{Binding nameStation}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="1" Padding="5" Width="240"
               Style="{StaticResource FontForTextBox}"/>

            <Label Content="Address"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="2" Padding="5"
               Style="{StaticResource FontForLabel}" Height="27" Margin="51,4.6,51,3.6" Width="62"/>

            <TextBox x:Name="addressStation" Text="{Binding address}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="2" Padding="5" Width="240"
               Style="{StaticResource FontForTextBox}"/>

            <Label Content="Location"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="3" Padding="5"
               Style="{StaticResource FontForLabel}"/>

            <TextBox x:Name="locatLatitude" Text="{Binding Latitude}"
               HorizontalAlignment="Center" VerticalAlignment="Top"
               Grid.Column="1" Grid.Row="3" Padding="5" Height="30" Width="150"
               Style="{StaticResource FontForTextBox}"/>

            <TextBox x:Name="locatLongitude" Text="{Binding Longitude}"
               HorizontalAlignment="Center" VerticalAlignment="Bottom"
               Grid.Column="1" Grid.Row="3" Padding="5" Height="30" Width="150"
               Style="{StaticResource FontForTextBox}"/>

            <Label Content="Lines in this station"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="4" Padding="5"
               Style="{StaticResource FontForLabel}" Height="27" Margin="12,13,12,12.8" Width="140"/>

            <ListBox x:Name="lines" ItemsSource="{Binding lineInStation}"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="4" Padding="5" Width="150" Height="102"
               Style="{StaticResource FontForListBox}" Margin="60,11.4,59.6,9.8" Grid.RowSpan="2"/>

            <Button Content="update station"
                    Grid.Column="0" Grid.Row="6"
                    Width="150" Height="40" VerticalAlignment="Center"
                    Style="{StaticResource FontForButtom}"
                    Click="Button_Click_Update"/>

            <Button Content="delete station"
                    Grid.Column="1" Grid.Row="6"
                    Width="150" Height="40" VerticalAlignment="Center"
                    Style="{StaticResource FontForButtom}"
                    Click="Button_Click_Delete"/>
        </Grid>

        <Grid x:Name="addNewStation" Grid.Column="1" Width="450" Margin="9.8,50,9.6,12"
              Visibility="{Binding}" DataContext="{Binding}" d:IsHidden="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="53"/>
                <RowDefinition Height="70.4"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Number Bus Station"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="0" Padding="5"
               Style="{StaticResource FontForLabel}" Height="27" Margin="12,4.8,12,3.4" Width="140"/>

            <TextBox x:Name="addNumberStation" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="0" Padding="5" Width="150"
               Style="{StaticResource FontForTextBox}"/>

            <Label Content="Station"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="1" Padding="5"
               Style="{StaticResource FontForLabel}" Margin="54,5,54,2.2" Width="56"/>

            <TextBox x:Name="addNameStation" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="1" Padding="5" Width="240"
               Style="{StaticResource FontForTextBox}"/>

            <Label Content="Address"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="2" Padding="5"
               Style="{StaticResource FontForLabel}" Height="27" Margin="51,4.6,51,3.6" Width="62"/>

            <TextBox x:Name="addAddressStation" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="1" Grid.Row="2" Padding="5" Width="240"
               Style="{StaticResource FontForTextBox}"/>

            <Label Content="Location"
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Grid.Column="0" Grid.Row="3" Padding="5"
               Style="{StaticResource FontForLabel}"/>

            <TextBox x:Name="addLocatLatitude" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Top"
               Grid.Column="1" Grid.Row="3" Padding="5" Height="30" Width="150"
               Style="{StaticResource FontForTextBox}"/>

            <TextBox x:Name="addLocatLongitude" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Bottom"
               Grid.Column="1" Grid.Row="3" Padding="5" Height="30" Width="150"
               Style="{StaticResource FontForTextBox}"/>

            <Button Content="ADD"
                    Grid.Column="0" Grid.Row="6"
                    Width="150" Height="40" VerticalAlignment="Center"
                    Style="{StaticResource FontForButtom}"
                    Click="ADDButton_Click"/>

        </Grid>




    </Grid>
</Window>
