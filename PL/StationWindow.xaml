<Window x:Class="PL.StationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="StationWindow" Height="550" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="background1.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="450"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.RowSpan="2" Grid.Column="0" Background="#FFA4E4ED" />

        <Menu x:Name="moveTo" HorizontalAlignment="Left" Height="20" Width="50" Grid.Column="1"
              FontFamily="FbExtazi Regular" FontSize="16">
            <MenuItem Header="go to.." Click="goBus_Click">
                <MenuItem x:Name="goBus" Header="bus window" Click="goBus_Click"/>
                <MenuItem x:Name="goLine" Header="line window" Click="goLine_Click"/>
                <MenuItem x:Name="gouser" Header="user window" Click="gouser_Click"/>
                <MenuItem x:Name="logOut" Header="log out" Click="logOut_Click"/>
            </MenuItem>
        </Menu>


        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="350"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="all bus stations:" 
                   Grid.Row="0" Grid.Column="0" Padding="10" VerticalAlignment="Bottom"
                   Style="{StaticResource FontForLabel}" Height="37" Margin="0,0,0.2,0.4"/>

            <ListView x:Name="listStation"
                 ItemsSource="{Binding}" MouseDoubleClick="listStation_MouseDoubleClick"
                      Grid.Column="0" Padding="10" Margin="10,0.4,0.4,2.6" Grid.Row="1" Opacity="0.8"/>

            <Button Content="+"
                    Grid.Row="2" Grid.Column="0" Height="40" Width="100"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                Style="{StaticResource FontForButtom}"
                Click="Button_Click_Add" ToolTip="press double click to enter a new station"/>
        </Grid>

        <Frame x:Name="page" Grid.Row="1" Grid.Column="2" NavigationUIVisibility="Hidden"
               HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
