<Window x:Class="PL.BusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="BUSES" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <Grid Width="150">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="288"/>
                <RowDefinition Height="81.6"/>
            </Grid.RowDefinitions>

            <Label Content="all buses:" 
                   Grid.Row="0" Grid.Column="0" Padding="10" VerticalAlignment="Center"
                   Style="{StaticResource FontForLabel}" Height="37"/>

            <ListView x:Name="listBus"
                      ItemsSource="{Binding}"
                      FontFamily="FbExtazi Regular" FontSize="16" FontWeight="Bold"
                      Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top"
                      MouseDoubleClick="listBus_MouseDoubleClick" Width="150"/>

            <Button Content="Add new bus"
                HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5"
                Height="36" Grid.Row="2"
                Style="{StaticResource FontForButtom}"
                MouseDoubleClick="DoubleClickToAddNewBus"/>
        </Grid>

        <Frame x:Name="frame" Grid.Column="1" Height="420" Width="300"/>

        <Canvas x:Name="detailOfBus" Visibility="{Binding}" Grid.Column="1" Width="300">

            <Grid x:Name="GridDetailOfBus" Width="300" Height="400">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="169*"/>
                    <ColumnDefinition Width="131*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>

                </Grid.RowDefinitions>

                <Label Content="Number Bus:"
                       Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                       Style="{StaticResource FontForLabel}" Height="27" Margin="37,15,38.8,14.8" Width="93"/>

                <TextBox x:Name="numberBus"
                 Text="{Binding numberLicense}"
                 PreviewTextInput="numberBus_PreviewTextInput"
                 Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                 Height="23" TextWrapping="Wrap" Width="100" MaxLength="8"
                 Style="{StaticResource FontForTextBox}" Margin="14.2,17,17,16.8"/>

                <Label x:Name="date" Content="Manufacturing date"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Grid.Row="1"
                   Style="{StaticResource FontForLabel}" Height="27" Margin="14,15.2,15.8,14.6" Width="139"/>

                <DatePicker x:Name="dateBus"
                    SelectedDate="{Binding startActivity}"
                    Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    DisplayDateEnd="{Binding Mode=OneWay, Source={x:Static System:DateTime.Today}}" Height="23" Margin="13.2,17.2,16,16.6" Width="102"/>

                <Label Content="Last treat"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="2" Padding="5" 
               Style="{StaticResource FontForLabel}" Height="27" Margin="48,15.4,50.8,15.2" Width="70"/>

                <DatePicker x:Name="dateTreat"
                    SelectedDate="{Binding lastTreat}"
                    Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    DisplayDateEnd="{Binding Mode=OneWay, Source={x:Static System:DateTime.Today}}" Height="23" Margin="13.2,17.4,16,17.2" Width="102"/>

                <Label Content="Sum K.M."
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="3" Padding="5"
               Style="{StaticResource FontForLabel}" Height="28" Margin="48,14.8,50.8,14.8" Width="70"/>

                <TextBox x:Name="sumKm" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Center"
               PreviewTextInput="numberBus_PreviewTextInput"
               Grid.Column="1" Grid.Row="3" Width="100" Padding="5"
               Style="{StaticResource FontForTextBox}" Height="28" Margin="14.2,14.8,17,14.8"/>

                <Label Content="Fuel status"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="4" Padding="5"
               Style="{StaticResource FontForLabel}" Height="27" Margin="44,15.2,46.8,15.4" Width="78"/>

                <TextBox x:Name="fuel" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Center"
               PreviewTextInput="numberBus_PreviewTextInput"
               Grid.Column="1" Grid.Row="4" Width="100" Padding="5"
               Style="{StaticResource FontForTextBox}" Height="29" Margin="14.2,14.2,17,14.4"/>

                <Label Content="Sum K.M. from last treat"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Grid.Column="0" Grid.Row="5" Padding="5"
               Style="{StaticResource FontForLabel}" Height="27" Margin="4,14.6,6.8,15.2" Width="158"/>

                <TextBox x:Name="KmFrom" Text=""
               HorizontalAlignment="Center" VerticalAlignment="Center"
               PreviewTextInput="numberBus_PreviewTextInput" 
               Grid.Column="1" Grid.Row="5" Width="100" Padding="5"
               Style="{StaticResource FontForTextBox}" Height="29" Margin="14.2,13.6,17,14.2"/>

            </Grid>
        </Canvas>

        <Button x:Name="update" Content="UPDATE"
                Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="90" Height="30" Click="update_Click"
                FontFamily="FbExtazi Regular" FontSize="16" FontWeight="Bold"
                FlowDirection="LeftToRight" Background="#FFA4E4ED" Margin="29.2,318,29.6,72">
            <Button.Style>
                <Style>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=idBus, Path=Text}" Value="">
                            <Setter Property="Button.IsEnabled" Value="false"/>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding ElementName=dateBus, Path=Text}" Value="">
                            <Setter Property="Button.IsEnabled" Value="false"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button x:Name="refuel"
                    Grid.Column="2" Width="90" Height="30" Visibility="{Binding}"
                        Style="{StaticResource FontForButtom}" Content="refuel" Padding="5"
                        VerticalAlignment="Center"
                        Click="refuel_Click" Margin="29.2,207,29.6,183"/>

        <Button x:Name="treat"
                    Grid.Column="2" Width="90" Height="30" Visibility="{Binding}"
                        Style="{StaticResource FontForButtom}" Content="treat" Padding="5"
                        VerticalAlignment="Center"
                        Click="treat_Click" Margin="29.2,247,29.6,143"/>

        <Button x:Name="delete"
                    Grid.Column="2" Width="90" Height="30" Visibility="{Binding}"
                        Style="{StaticResource FontForButtom}" Content="delete bus" Padding="5"
                        VerticalAlignment="Center"
                        Click="delete_Click" Margin="29.2,357,29.6,33"/>




    </Grid>
</Window>
